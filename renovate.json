{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    "schedule:automergeWeekly"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "definitelyTyped",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["@types/{/,}**"]
    },
    {
      "automerge": true,
      "groupName": "linting",
      "groupSlug": "eslint-plugin",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["eslint-plugin{/,}**"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": true,
      "groupName": "pnpm updates",
      "groupSlug": "pnpm",
      "matchPackageNames": ["pnpm"]
    },
    {
      "automerge": true,
      "groupName": "all minor and patch dependencies",
      "groupSlug": "all-minor-patch",
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["!pnpm", "!eslint-plugin{/,}**"]
    },
    {
      "automerge": true,
      "groupName": "lucide-react updates",
      "groupSlug": "lucide-react",
      "matchPackageNames": ["lucide-react"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": true,
      "groupName": "leaflet.locatecontrol updates",
      "groupSlug": "leaflet-locatecontrol",
      "matchPackageNames": ["leaflet.locatecontrol"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": true,
      "groupName": "next patch updates",
      "matchPackageNames": ["next"],
      "matchUpdateTypes": ["patch"],
      "schedule": ["daily"]
    }
  ]
}
