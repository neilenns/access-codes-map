{
  "configurations": [
    {
      "command": "pnpm exec turbo run dev",
      "name": "Debug (All)",
      "request": "launch",
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s/admin/scenarios",
        "webRoot": "${workspaceFolder}/apps/web/src"
      },
      "type": "node-terminal"
    },
    {
      "command": "pnpm exec turbo run dev --filter web",
      "internalConsoleOptions": "neverOpen",
      "name": "Debug (Web)",
      "request": "launch",
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/apps/web/src"
      },
      "type": "node-terminal"
    },
    {
      "address": "localhost",
      "localRoot": "${workspaceFolder}/apps/api",
      "name": "Debug (api)",
      "port": 9229,
      "preLaunchTask": "Wrangler Dev",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ],
  "version": "0.2.0"
}
