{
  "name": "api",
  "private": true,
  "type": "module",
  "scripts": {
    "cf-typegen": "wrangler types --env-interface CloudflareBindings ./src/types/worker-configuration.d.ts",
    "ci": "wrangler deploy --dry-run --env=dev",
    "db:generate": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply ACCESS_CODES_DB --local --env=dev",
    "db:seed": "rimraf .wrangler/state/v3/d1/miniflare-D1DatabaseObject && cross-env CI=true pnpm run db:migrate && wrangler d1 execute ACCESS_CODES_DB --file=./src/db/seed.sql --env dev --local --yes",
    "db:studio": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio --host=0.0.0.0 --port=8788",
    "deploy": "wrangler deploy --minify",
    "dev": "wrangler dev --env=dev",
    "lint": "eslint ."
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.44.0",
    "better-sqlite3": "^11.10.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.9",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.1",
    "rimraf": "^6.0.1",
    "wrangler": "^4.15.2"
  }
}
